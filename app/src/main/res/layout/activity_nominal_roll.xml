<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/top_bar">
    <TextView
        android:id="@+id/courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:textStyle="italic"
        android:text="@string/courses_picked"/>
    <TextView
        android:text="@string/date_picked"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@id/courses"
        android:id="@+id/date_picked"/>
      <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/btn_refresh"
              android:src="@drawable/ic_refresh_black_24dp"
              android:layout_alignParentEnd="true" style="@style/Widget.AppCompat.Button.Borderless"/>
  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/LinearText"
    android:layout_below="@+id/top_bar">
    <TextView
      android:text="@string/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:layout_weight="8"
      android:layout_marginStart="2dp"
      android:textStyle="bold"
      android:id="@+id/name"/>
    <TextView
      android:text="@string/status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:layout_weight="1"
      android:textStyle="bold"
      android:id="@+id/status"/>
  </LinearLayout>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/mRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/LinearText"/>
</RelativeLayout>