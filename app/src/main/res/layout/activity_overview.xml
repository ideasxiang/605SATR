<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Overview">

    <TextView
            android:text="@string/_605_satr_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_shift_performace"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />
    <TextView
            android:text="@string/shift_satr_requirement_met"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_shift_requirement" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_shift_performace" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shift_percentage" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_shift_requirement" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_shift_performace"/>
    <TextView
            android:text="@string/mwds_satr_requirement_met"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_mwds_performance"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_shift_requirement"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mwds_percentage"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/txt_mwds_performance"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_shift_requirement"/>
    <TextView
            android:text="@string/nsmen_satr_requirement_met"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nsmen_performance" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_mwds_performance"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nsmen_percentage" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_nsmen_performance" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_mwds_performance"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_spinner" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_shift_performace" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>